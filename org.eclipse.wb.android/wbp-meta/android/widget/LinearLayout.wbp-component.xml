	<!-- CREATION -->
	<creation>
		<source></source>
	</creation>
	<!-- PROPERTIES -->
	<properties-preferred names="android:orientation"/>
	<!-- PARAMETERS -->
	<parameters>
		<!-- new -->
		<parameter name="emptyViewGroupText">Empty LinearLayout</parameter>
		<!-- flow container -->
		<parameter name="flowContainer">true</parameter>
		<parameter name="flowContainer.horizontal">isHorizontal()</parameter>
		<parameter name="flowContainer.component">android.view.View</parameter>
		<!-- default SelectionEditPolicy -->
		<parameter name="GEF.defaultSelectionPolicy">
			org.eclipse.wb.android.internal.gef.policy.layouts.LinearLayoutSelectionEditPolicy
		</parameter>
	</parameters>
